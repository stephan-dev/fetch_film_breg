
<h1>Ta recherche film a donné : </h1><br>

<% if @yourresult.empty? %>
<p>Pas de film trouvé</p>

<% else %>
<div class="container">

  <% @yourresult.each do |film| %>
  <div class="row">
  <div class="col-sm-6 col-lg-4">
  	  <div class="card">
  	  	  
			<div class="card-title"><strong>Titre : </strong><%= film['title'] %></div>
			<div class="card-body">
				<div class="card-text"><strong>Date de sortie : </strong><%= film['release'] %></div>
			</div>
		  </div>
	  </div>
	</div>
	<br>
  <% end %>
  </div>
<% end %>
<br><br>
<div class="row">
	<div class="col-sm-6 col-lg-4">
         <div type= "button" class="btn btn-outline-success"><a href="/">nouvelle recherche</a></div>
    </div>
<br>
</div>
</div>
<br><br><br>